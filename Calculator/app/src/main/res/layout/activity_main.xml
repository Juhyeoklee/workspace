<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <TextView android:id="@+id/txtViewDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text=""/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="= "/>
            <TextView android:id="@+id/txtViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="5dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/rdoBtnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Decimal"
                android:layout_marginEnd="100dp"
                />
            <RadioButton android:id="@+id/rdoBtnHeximal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Heximal"/>
        </RadioGroup>
    </LinearLayout>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="5dp">

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button android:id="@+id/btnLeftParenthleses"
                android:layout_height="match_parent"
                android:text="("
                android:textSize="20sp"/>
            <Button android:id="@+id/btnRigntParenthleses"
                android:layout_height="match_parent"
                android:text=")"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnEdit"
                android:layout_height="match_parent"
                android:text="@string/arrow"
                android:layout_span="2"
                android:textSize="20dp"/>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button android:id="@+id/btnNum1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20sp"/>
            <Button android:id="@+id/btnNum2"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNum3"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnAdd"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button android:id="@+id/btnNum4"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNum5"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNum6"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="20sp"/>
            <Button android:id="@+id/btnSub"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button android:id="@+id/btnNum7"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNum8"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNum9"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnMul"
                android:layout_height="match_parent"
                android:text="X"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button android:id="@+id/btnNum0"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"/>
            <Button android:id="@+id/btnNumDot"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="20dp"/>
            <Button android:id="@+id/btnEnter"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="20dp"/>
            <Button android:id="@+id/btnDiv"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>


</LinearLayout>